		url = `type=${search_type}&query=${$('#query').val()}&fid_3=${fid_3}&country=${$('#country_input').val()}&city=${$('#city_input').val()}`
	}
	
	$.ajax({
		url: Wo_Ajax_Requests_File()+'?f=search&s=search_page&' + url,
		type: 'get',
		success:function(data){
			$("#users-cont").html(data['html'])
		}
	})  
}
