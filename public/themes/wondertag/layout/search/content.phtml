let search_type = 'users'

$('.clear_input').on('mousedown', function() {
	$('#query').val('');
	$(this).hide();
	search();
})

$('#query').on('input', function() {
	if($(this).val()) {
		$('.clear_input').show()
	} else {
		$('.clear_input').hide()
	}
})

function changeTypeFilters() {
	const filtersContainer = $('.tag_srch_filters')

	let url = `type=${search_type}`

	$.ajax({
		url: Wo_Ajax_Requests_File()+'?f=search_change_filters&' + url,
		type: 'get',
		success:function(data){
			filtersContainer.html(data['html'])
			search();
		}
	})  
}

function searchType(type) {
	search_type = type;
	changeTypeFilters();
}

function search() {
	let url = ''

	const fid_3 = $('#fid_3').val();
	const fid_4 = $('#fid_4').val();

	if('users' === search_type) {
		url = `type=${search_type}&query=${$('#query').val()}&country=${$('#country_input').val()}&city=${$('#city_input').val()}&age_from=${$('#age_from').val()}&age_to=${$('#age_to').val()}&filterbyage=${$('input[name=filterbyage]:checked').val()}&verified=${$('input[name=verified]:checked').val()}&status=${$('input[name=status]:checked').val()}&gender=${$('input[name=gender]:checked').val()}&image=${$('input[name=image]:checked').val()}&fid_3=${fid_3}&fid_4=${fid_4}`
	} else if('groups' === search_type) {
		url = `type=${search_type}&query=${$('#query').val()}&fid_3=${fid_3}&privacy=${$('input[name=privacy]:checked').val()}&country=${$('#country_input').val()}&city=${$('#city_input').val()}`
